<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>List product</title>
</head>
<body>
    <%- include('nav') %>
    
    <div class="product-table">
        <table>
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Price</th>
              <th>Description</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(hasProducts) {
                for(const product of prods) { %>
                  <tr>
                    <td><img src="/images/<%= product.images %>"></td>
                    <td><%= product.name %></td>
                    <td>$<%= product.price %></td>
                    <td><%= product.description %></td>
                    <td><a href="/admin/edit/<%= product.id %>">Edit</a> | <a href="/admin/delete/<%= product.id %>">Delete</a></td>
                  </tr>
            <% } } else { %>
                    <tr>
                        <td colspan="5">Products is empty</td>
                    </tr>
                <% } %>
          </tbody>
        </table>
      </div>   
</body>
</html>